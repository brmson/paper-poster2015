\def\beamer@typesetheadorfoot#1{% typeset the head or footline
  {\parskip0pt %\offinterlineskip% <---- !!! commented out
    \hbox{%
      \hskip-\Gm@lmargin%
      \hbox{%
        \vbox{%
          \@tempdima=\textwidth%
          \textwidth=\paperwidth%
          \hsize=\textwidth%
          \def\\{,}%
          \usebeamertemplate***{#1}%
        }}%
      \hskip-\Gm@rmargin%
    }}\hfil%
}

\setbeamertemplate{headline}{
        \vspace{20ex}
  \begin{beamercolorbox}[wd=\textwidth]{headline}
	%{\fontsize{100pt}{1em}\selectfont \bfseries \posterm@rker}%
	\centering
	\usebeamercolor{title in headline}{\color{fg}\huge{\textbf{\textrm{\inserttitle}}\par}}
  \end{beamercolorbox}

     \vspace{8ex}

   \begin{beamercolorbox}[wd=\paperwidth]{headmeta}
     \centering
     \hspace{1em}\usebeamercolor{author in headline}{\Large {\bfseries\insertauthor} \hspace{1em} {\ttfamily\insertshortauthor}}

     \vspace{5ex}
     \hspace{1em}\usebeamercolor{institute in headline}{\normalsize \color{fg}\bfseries\insertinstitute}
   \end{beamercolorbox}
  
  %\begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
  %  \rule{0pt}{1em}
  %\end{beamercolorbox}
}

